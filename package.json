{
  "name": "romm-client",
  "version": "1.0.0",
  "description": "Electron app that plugs into the RomM API to provide a desktop experience",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "publish": "electron-builder --win --publish always"
  },
  "keywords": [
    "romm",
    "emulator",
    "roms",
    "gaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.2",
    "crc-32": "^1.2.2",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.4"
  },
  "build": {
    "appId": "fr.chaun14.rommclient",
    "productName": "RomM Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "chaun14",
      "repo": "romm-client"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "RomMClient-Setup-${version}-${arch}.${ext}",
      "runAfterFinish": true,
      "differentialPackage": true
    }
  }
}
