{
  "name": "romm-client",
  "version": "1.0.5",
  "description": "Electron app that plugs into the RomM API to provide a desktop experience",
  "main": "./out/main.js",
  "scripts": {
    "start": "npm run build &&electron .",
    "dev": "npm run build && electron . --dev",
    "build": "tsc && npm run copy-assets",
    "copy-assets": "xcopy src\\renderer out\\renderer /E /I /Y && copy src\\preload.js out\\",
    "dist": "electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "publish": "npm run build && electron-builder --win --publish always"
  },
  "keywords": [
    "romm",
    "emulator",
    "roms",
    "gaming"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/ini": "^4.1.1",
    "@types/unzipper": "^0.10.11",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.6.2",
    "crc-32": "^1.2.2",
    "dotenv": "^17.2.3",
    "electron-updater": "^6.6.2",
    "form-data": "^4.0.4",
    "ini": "^6.0.0",
    "tslib": "^2.8.1",
    "unzipper": "^0.12.3"
  },
  "build": {
    "appId": "fr.chaun14.rommclient",
    "productName": "RomM Client",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "publish": {
      "provider": "github",
      "owner": "chaun14",
      "repo": "romm-client"
    },
    "win": {
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "RomMClient-Setup-${version}-${arch}.${ext}",
      "runAfterFinish": true,
      "differentialPackage": true
    }
  }
}
